<script>
  // Initialize showcase navigation
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const sliderNavs = document.querySelectorAll('.slider-navigation-arrows');
      console.log('ShowcaseVideo - Found slider navs:', sliderNavs.length);
    
      sliderNavs.forEach((nav, index) => {
        const htmlNav = nav as HTMLElement;
        const targetGridId = htmlNav.dataset.targetId;
        const targetGrid = document.getElementById(targetGridId!) as HTMLElement | null;
        
        console.log(`ShowcaseVideo Nav ${index}:`, {
          targetGridId,
          targetGrid: !!targetGrid,
          gridScrollWidth: targetGrid?.scrollWidth,
          gridClientWidth: targetGrid?.clientWidth
        });
    
        if (targetGrid) {
          const prevArrow = nav.querySelector('.prev-arrow') as HTMLButtonElement | null;
          const nextArrow = nav.querySelector('.next-arrow') as HTMLButtonElement | null;
    
          // Calculate scroll amount based on first card
          const firstCard = targetGrid.querySelector('.card') as HTMLElement | null;
          let cardScrollAmount = 0;
    
          if (firstCard) {
            const cardWidth = firstCard.offsetWidth;
            const cardMarginRight = parseFloat(getComputedStyle(firstCard).marginRight) || 0;
            cardScrollAmount = cardWidth + cardMarginRight;
          } else {
            cardScrollAmount = targetGrid.clientWidth * 0.8;
          }
    
          const isScrollable = targetGrid.scrollWidth > targetGrid.clientWidth;
          
          console.log(`ShowcaseVideo Nav ${index} scrollable:`, isScrollable, 'scrollAmount:', cardScrollAmount);
    
          if (prevArrow) {
            prevArrow.addEventListener('click', () => {
              console.log('ShowcaseVideo Prev arrow clicked');
              targetGrid.scrollBy({
                left: -cardScrollAmount,
                behavior: 'smooth'
              });
            });
          }
    
          if (nextArrow) {
            nextArrow.addEventListener('click', () => {
              console.log('ShowcaseVideo Next arrow clicked');
              targetGrid.scrollBy({
                left: cardScrollAmount,
                behavior: 'smooth'
              });
            });
          }
        }
      });
    }, 100);
  });
</script>
