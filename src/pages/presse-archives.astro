  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Tab functionality
      const tabButtons = document.querySelectorAll('.archive-tab-button');
      const archiveSections = document.querySelectorAll('.archive-section');

      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const targetId = button.getAttribute('data-target');
          
          // Remove active class from all buttons and sections
          tabButtons.forEach(btn => btn.classList.remove('active'));
          archiveSections.forEach(section => section.classList.remove('active'));
          
          // Add active class to clicked button and target section
          button.classList.add('active');
          document.getElementById(targetId).classList.add('active');
        });
      });

      // Accordion functionality for publications
      const publicationHeaders = document.querySelectorAll('.publication-header');
      
      publicationHeaders.forEach(header => {
        header.addEventListener('click', () => {
          const publicationItem = header.closest('.publication-item');
          publicationItem.classList.toggle('active');
        });
      });
      // -----------------------------
      // Lightbox slider (grouped)
      // -----------------------------
      const lightbox = document.getElementById('archive-lightbox');
      const lightboxImg = lightbox.querySelector('.archive-lightbox__img');
      const lightboxCaption = lightbox.querySelector('.archive-lightbox__caption');
      const btnPrev = lightbox.querySelector('.archive-lightbox__prev');
      const btnNext = lightbox.querySelector('.archive-lightbox__next');
      const btnClose = lightbox.querySelector('.archive-lightbox__close');

      let currentGroup = [];
      let currentIndex = 0;

      const getCaption = (imgEl) => imgEl.getAttribute('alt') || '';

      const updateLightbox = () => {
        if (!currentGroup.length) return;
        const { src, alt } = currentGroup[currentIndex];
        lightboxImg.src = src;
        lightboxImg.alt = alt || '';
        lightboxCaption.textContent = alt || '';
      };

      const openLightbox = (groupImages, startIndex) => {
        currentGroup = groupImages.map(img => ({ src: img.getAttribute('src'), alt: img.getAttribute('alt') }));
        currentIndex = Math.max(0, Math.min(startIndex, currentGroup.length - 1));
        updateLightbox();
        lightbox.classList.add('is-open');
        document.body.style.overflow = 'hidden';
        lightbox.setAttribute('aria-hidden', 'false');
      };

      const closeLightbox = () => {
        lightbox.classList.remove('is-open');
        document.body.style.overflow = '';
        lightbox.setAttribute('aria-hidden', 'true');
        lightboxImg.src = '';
        lightboxCaption.textContent = '';
        currentGroup = [];
        currentIndex = 0;
      };

      const showNext = () => {
        if (!currentGroup.length) return;
        currentIndex = (currentIndex + 1) % currentGroup.length;
        updateLightbox();
      };

      const showPrev = () => {
        if (!currentGroup.length) return;
        currentIndex = (currentIndex - 1 + currentGroup.length) % currentGroup.length;
        updateLightbox();
      };

      btnNext.addEventListener('click', showNext);
      btnPrev.addEventListener('click', showPrev);
      btnClose.addEventListener('click', closeLightbox);
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) closeLightbox();
      });

      document.addEventListener('keydown', (e) => {
        if (!lightbox.classList.contains('is-open')) return;
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowRight') showNext();
        if (e.key === 'ArrowLeft') showPrev();
      });

      // Helper: get images group for clicked image
      const getGroupForImage = (imgEl) => {
        // Publications: group within the same .publication-item
        const publicationItem = imgEl.closest('.publication-item');
        if (publicationItem) {
          return Array.from(publicationItem.querySelectorAll('.publication-images img'));
        }
        // Covers: group is whole covers section
        const coversSection = imgEl.closest('#covers-section');
        if (coversSection) {
          return Array.from(coversSection.querySelectorAll('.archive-item img'));
        }
        // Livres (ouvrages): group is whole livres section
        const livresSection = imgEl.closest('#livres-section');
        if (livresSection) {
          return Array.from(livresSection.querySelectorAll('.archive-item img'));
        }
        // Autre: group is whole autre section
        const autreSection = imgEl.closest('#autre-section');
        if (autreSection) {
          return Array.from(autreSection.querySelectorAll('.archive-item img'));
        }
        // Fallback: only the clicked image
        return [imgEl];
      };

      const attachLightbox = (root) => {
        const isMobile = window.matchMedia('(max-width: 767px)').matches;
        const images = root.querySelectorAll('.publication-images img, #covers-section .archive-item img, #livres-section .archive-item img, #autre-section .archive-item img');
        images.forEach(img => {
          // Remove prior handler to avoid duplicates
          const newImg = img;
          newImg.style.cursor = isMobile ? 'default' : 'zoom-in';
          newImg.replaceWith(newImg.cloneNode(true));
        });

        const freshImages = root.querySelectorAll('.publication-images img, #covers-section .archive-item img, #livres-section .archive-item img, #autre-section .archive-item img');
        if (isMobile) {
          // Do not attach lightbox on mobile
          return;
        }
        freshImages.forEach(img => {
          img.addEventListener('click', () => {
            const group = getGroupForImage(img);
            const index = group.indexOf(img);
            openLightbox(group, Math.max(0, index));
          });
        });
      };

      attachLightbox(document);

      // Re-evaluate on resize to enable/disable lightbox
      window.addEventListener('resize', () => attachLightbox(document));
    });
  </script>
