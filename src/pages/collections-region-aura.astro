  <script is:inline>
    // Share gallery function
    function shareGallery(url) {
      if (navigator.share) {
        navigator.share({
          title: 'Galerie Photo - Jean-Marc Favre',
          url: url
        });
      } else {
        // Fallback: copy to clipboard
        navigator.clipboard.writeText(url).then(() => {
          alert('Lien copié dans le presse-papiers !');
        });
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      // --- Sidebar Navigation ---
      const sidebarButtons = document.querySelectorAll('.collections-sidebar-nav .collections-sidebar-button');
      const mainGalleryContents = document.querySelectorAll('.collections-gallery-content-area');

      function showGallery(targetId) {
        // Remove active from all sidebar buttons
        sidebarButtons.forEach(button => button.classList.remove('active'));
        // Remove active from all main gallery contents
        mainGalleryContents.forEach(content => content.classList.remove('active'));

        // Hide the no-gallery message
        const noGalleryMessage = document.getElementById('no-gallery-selected');
        if (noGalleryMessage) {
          noGalleryMessage.style.display = 'none';
        }

        // Add active to clicked button
        const activeButton = document.querySelector(`.collections-sidebar-nav [data-target="${targetId}"]`);
        if (activeButton) {
          activeButton.classList.add('active');
        }

        // Show the target gallery
        const targetContent = document.getElementById(targetId);
        if (targetContent) {
          targetContent.classList.add('active');
        }
      }

      // Sidebar button functionality
      sidebarButtons.forEach(button => {
        button.addEventListener('click', (event) => {
          showGallery(event.target.dataset.target);
        });
      });

      // Mobile dropdown functionality
      const regionSelect = document.getElementById('region-category-select');
      if (regionSelect) {
        regionSelect.addEventListener('change', (event) => {
          if (event.target.value) {
            showGallery(event.target.value);
          } else {
            // Show no-gallery message when "Choisir ..." is selected
            const mainGalleryContents = document.querySelectorAll('.collections-gallery-content-area');
            mainGalleryContents.forEach(content => content.classList.remove('active'));
            
            const noGalleryMessage = document.getElementById('no-gallery-selected');
            if (noGalleryMessage) {
              noGalleryMessage.style.display = 'flex';
            }
          }
        });
      }

      // Handle initial load and hash navigation
      if (window.location.hash) {
        const hashId = window.location.hash.substring(1);
        if (document.getElementById(hashId)) {
          showGallery(hashId);
          // Update mobile dropdown to match the hash
          if (regionSelect) {
            regionSelect.value = hashId;
          }
        }
      } else {
        // If no hash, show the no-gallery message
        const noGalleryMessage = document.getElementById('no-gallery-selected');
        if (noGalleryMessage) {
          noGalleryMessage.style.display = 'flex';
        }
      }
    });
  </script>


