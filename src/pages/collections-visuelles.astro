  <script is:inline>
    // Share gallery function
    function shareGallery(url) {
      if (navigator.share) {
        navigator.share({
          title: 'Galerie Photo - Jean-Marc Favre',
          url: url
        });
      } else {
        // Fallback: copy to clipboard
        navigator.clipboard.writeText(url).then(() => {
          alert('Lien copié dans le presse-papiers !');
        });
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      const sidebarButtons = document.querySelectorAll('.collections-sidebar-nav .collections-sidebar-button');
      const galleryContents = document.querySelectorAll('.collections-gallery-content-area');
      
      function showGallery(targetId) {
        // Remove active from all sidebar buttons
        sidebarButtons.forEach(button => button.classList.remove('active'));
        
        // Hide all galleries
        galleryContents.forEach(content => content.classList.remove('active'));
        
        // Hide the no-gallery message
        const noGalleryMessage = document.getElementById('no-gallery-selected');
        if (noGalleryMessage) {
          noGalleryMessage.style.display = 'none';
        }
        
        // Add active to the corresponding sidebar button
        const activeButton = document.querySelector(`[data-target="${targetId}"]`);
        if (activeButton) {
          activeButton.classList.add('active');
        }
        
        // Show target gallery
        const targetContent = document.getElementById(targetId);
        if (targetContent) {
          targetContent.classList.add('active');
        }
      }
      
      function showNoGalleryMessage() {
        // Hide all galleries
        galleryContents.forEach(content => content.classList.remove('active'));
        
        // Show the no-gallery message
        const noGalleryMessage = document.getElementById('no-gallery-selected');
        if (noGalleryMessage) {
          noGalleryMessage.style.display = 'flex';
        }
      }
      
      // Handle sidebar buttons (excluding dropdown triggers)
      sidebarButtons.forEach(button => {
        if (!button.classList.contains('collections-dropdown-trigger') && !button.classList.contains('submenu-item')) {
          button.addEventListener('click', (e) => {
            showGallery(button.dataset.target);
          });
        }
      });
      
      // Handle dropdown toggles
      const dropdownTriggers = document.querySelectorAll('.collections-dropdown-trigger');
      dropdownTriggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          // Remove active state from all buttons
          sidebarButtons.forEach(button => button.classList.remove('active'));
          
          // Add active state to clicked dropdown trigger
          trigger.classList.add('active');
          
          const submenu = trigger.nextElementSibling;
          if (submenu) {
            // Close all other dropdowns first
            document.querySelectorAll('.collections-dropdown-submenu').forEach(menu => {
              if (menu !== submenu) {
                menu.classList.remove('active');
              }
            });
            // Toggle the clicked dropdown
            submenu.classList.toggle('active');
          }
          
          // Show "Choisir une galerie" message when clicking category buttons
          showNoGalleryMessage();
        });
      });
      
      // Handle submenu items
      const submenuItems = document.querySelectorAll('.submenu-item');
      submenuItems.forEach(item => {
        item.addEventListener('click', (e) => {
          showGallery(item.dataset.target);
        });
      });

      // Mobile dropdown functionality
      const visuallesCategorySelect = document.getElementById('visuelles-category-select');
      const visuallesSubcategorySelect = document.getElementById('visuelles-subcategory-select');
      
      // Define subcategories for each category
      const subcategories = {
        'aeriennes': [
          { value: 'aeriennes-gallery', text: 'Aériennes' }
        ],
        'gastronomie': [
          { value: 'gastronomie-plats-gallery', text: 'Plats' },
          { value: 'gastronomie-produits-gallery', text: 'Produits' },
          { value: 'gastronomie-chefs-gallery', text: 'Portraits Chefs' },
          { value: 'gastronomie-chocolat-gallery', text: 'Chocolat' }
        ],
        'graphisme': [
          { value: 'graphisme-gallery', text: 'Graphisme' }
        ],
        'montgolfiere': [
          { value: 'montgolfiere-gallery', text: 'Montgolfière' }
        ],
        'musique': [
          { value: 'musique-gallery', text: 'Musique' }
        ],
        'sequence': [
          { value: 'sequence-gallery', text: 'Séquence' }
        ],
        'studio': [
          { value: 'studio-gallery', text: 'Studio' }
        ],
        'voyages': [
          { value: 'voyages-gallery', text: 'Voyages' }
        ]
      };
      
      function updateSubcategoryOptions(category) {
        visuallesSubcategorySelect.innerHTML = '';
        
        if (!category) {
          // If no category selected, hide subcategory dropdown
          visuallesSubcategorySelect.style.display = 'none';
          return;
        }
        
        const options = subcategories[category] || [];
        
        if (category === 'gastronomie' && options.length > 1) {
          // Show subcategory dropdown for gastronomie
          visuallesSubcategorySelect.style.display = 'block';
          // Add placeholder option
          const placeholderOption = document.createElement('option');
          placeholderOption.value = '';
          placeholderOption.textContent = 'Choisir une galerie...';
          placeholderOption.selected = true;
          visuallesSubcategorySelect.appendChild(placeholderOption);
          
          options.forEach(option => {
            const optionElement = document.createElement('option');
            optionElement.value = option.value;
            optionElement.textContent = option.text;
            visuallesSubcategorySelect.appendChild(optionElement);
          });
        } else {
          // Hide subcategory dropdown for other categories
          visuallesSubcategorySelect.style.display = 'none';
          // Show the single gallery directly
          if (options.length > 0) {
            showGallery(options[0].value);
          }
        }
      }
      
      if (visuallesCategorySelect && visuallesSubcategorySelect) {
        visuallesCategorySelect.addEventListener('change', (event) => {
          updateSubcategoryOptions(event.target.value);
          
          // Show "Choisir une galerie" message when category is selected
          if (event.target.value === 'gastronomie') {
            showNoGalleryMessage();
          }
        });
        
        visuallesSubcategorySelect.addEventListener('change', (event) => {
          if (event.target.value) {
            showGallery(event.target.value);
          } else {
            // Show no-gallery message when "Choisir ..." is selected
            showNoGalleryMessage();
          }
        });
        
        // Initialize with default category (but don't show gallery yet)
        updateSubcategoryOptions(visuallesCategorySelect.value);
      }
      
      // Handle initial load and hash navigation
      if (window.location.hash) {
        const hashId = window.location.hash.substring(1);
        
        // Check if it's a gallery hash
        if (document.getElementById(hashId)) {
          showGallery(hashId);
          
          // Update mobile dropdown to match the hash
          for (const [category, galleries] of Object.entries(subcategories)) {
            const galleryFound = galleries.find(g => g.value === hashId);
            if (galleryFound) {
              visuallesCategorySelect.value = category;
              updateSubcategoryOptions(category);
              if (category === 'gastronomie') {
                visuallesSubcategorySelect.value = hashId;
              }
              break;
            }
          }
        } 
        // Check if it's a category hash (like #gastronomie)
        else if (subcategories[hashId]) {
          // Show "Choisir une galerie" message for category hashes
          showNoGalleryMessage();
          
          // Update mobile dropdowns
          visuallesCategorySelect.value = hashId;
          updateSubcategoryOptions(hashId);
          
          // Update desktop sidebar
          // Remove active state from all buttons
          sidebarButtons.forEach(button => button.classList.remove('active'));
          
          // Find and activate the category dropdown trigger
          const categoryTrigger = document.querySelector(`[data-target="${hashId}"]`);
          if (categoryTrigger) {
            categoryTrigger.classList.add('active');
            
            // Open the dropdown if it has subcategories
            if (subcategories[hashId].length > 1) {
              const submenu = categoryTrigger.nextElementSibling;
              if (submenu) {
                submenu.classList.add('active');
              }
            }
          }
        }
        // Check if it's a direct category without subcategories (like #aeriennes-gallery)
        else if (document.querySelector(`[data-target="${hashId}"]`)) {
          // Show the gallery directly
          showGallery(hashId);
          
          // Update mobile dropdown to match the hash
          for (const [category, galleries] of Object.entries(subcategories)) {
            const galleryFound = galleries.find(g => g.value === hashId);
            if (galleryFound) {
              visuallesCategorySelect.value = category;
              updateSubcategoryOptions(category);
              break;
            }
          }
          
          // If not found in subcategories, it's a direct category
          if (!visuallesCategorySelect.value) {
            // Find which category this gallery belongs to
            const directCategories = ['aeriennes', 'graphisme', 'montgolfiere', 'musique', 'sequence', 'studio', 'voyages'];
            for (const category of directCategories) {
              if (hashId.includes(category)) {
                visuallesCategorySelect.value = category;
                updateSubcategoryOptions(category);
                break;
              }
            }
          }
        }
      } else {
        // If no hash, show the no-gallery message
        showNoGalleryMessage();
      }
    });
  </script>

